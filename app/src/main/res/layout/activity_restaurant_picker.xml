<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hackru2014f.friendcast.RestaurantPickerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick a restaurant!"
        android:id="@+id/restaurantPickerTopText"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        style="@style/TextStyle"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restaurantPickerTopText"
        android:layout_above="@+id/restaurantPickerInviteButton"
        android:layout_marginTop="20dp"
        android:id="@+id/restaurantPickerListView"
        android:choiceMode="singleChoice"
        android:descendantFocusability="beforeDescendants"
        style="@style/TextStyle" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:id="@id/restaurantPickerInviteButton"
        android:gravity="center"
        android:text="Next"
        android:textColor="@color/white"
        android:background="@drawable/default_button"
        android:onClick="chooseRestaurant"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>
